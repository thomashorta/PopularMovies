<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/detail_vertical_spacing_normal">

    <ImageView
        android:layout_width="@dimen/favorite_size"
        android:layout_height="@dimen/favorite_size"
        android:src="@drawable/ic_play_24dp"/>

    <TextView
        tools:text="Official US Trailer"
        android:id="@+id/tv_trailer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/detail_horizontal_spacing"
        android:textSize="16sp"/>

</LinearLayout>